<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AjouterProduitActivity"
    android:orientation="vertical"
    android:padding="20dp"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        android:background="@android:color/transparent"
        android:layout_gravity="start"

        android:contentDescription="@string/close"
        android:layout_weight="1"

        android:id="@+id/back_btn"
        android:layout_marginTop="20dp"



        />
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="9"
         android:orientation="vertical">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAllCaps="true"
             android:textSize="13sp"
             android:textColor="@color/vert"
             android:text="@string/titre"
             android:layout_marginTop="20dp"
             android:layout_marginStart="10dp"
             android:textStyle="bold"
             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:id="@+id/titre_et"
             android:background="@drawable/rounded_edittext"
             android:hint="@string/titre"
             android:paddingStart="15dp"
             android:paddingEnd="15dp"

             android:inputType="textEmailAddress"
             android:importantForAutofill="no" />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAllCaps="true"
             android:textSize="13sp"
             android:textColor="@color/vert"
             android:text="@string/prix"
             android:layout_marginTop="20dp"
             android:layout_marginStart="10dp"
             android:textStyle="bold"
             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:id="@+id/prix_et"
             android:background="@drawable/rounded_edittext"
             android:hint="@string/prix"
             android:paddingStart="15dp"
             android:paddingEnd="15dp"

             android:inputType="numberDecimal"
             android:importantForAutofill="no" />

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAllCaps="true"
             android:textSize="13sp"
             android:textColor="@color/vert"
             android:text="@string/image"
             android:layout_marginTop="20dp"
             android:layout_marginStart="10dp"
             android:textStyle="bold"
             />

         <ImageView
             android:layout_width="220dp"
             android:layout_height="150dp"
             android:layout_marginTop="20dp"
             android:src="@drawable/ic_sharp_add_16"
             android:background="@color/gris_medium"
             android:scaleType="center"
             android:id="@+id/add_img_iv"
             />
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textAllCaps="true"
             android:textSize="13sp"
             android:textColor="@color/vert"
             android:text="@string/description"
             android:layout_marginTop="20dp"
             android:layout_marginStart="10dp"
             android:textStyle="bold"
             />
         <EditText
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:id="@+id/desc_et"
             android:background="@drawable/rounded_edittext"
             android:hint="@string/description"
             android:paddingStart="15dp"
             android:paddingEnd="15dp"

             android:inputType="textMultiLine"
             android:importantForAutofill="no" />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentEnd="true"
                 >
                 <Button
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:background="@drawable/rounded_button"
                     android:layout_marginTop="50dp"
                     android:text="@string/ajouter"
                     android:textAllCaps="true"
                     android:textSize="18sp"
                     android:textStyle="bold"
                     android:gravity="center"

                     android:id="@+id/ajouter_btn"

                     />
                 <Space
                     android:layout_width="0dp"
                     android:layout_weight="0.3"
                     android:layout_height="wrap_content" />
                 <Button
                     android:layout_width="0dp"
                     android:layout_weight="1"
                     android:layout_height="wrap_content"
                     android:background="@drawable/rounded_button"
                     android:layout_marginTop="50dp"
                     android:text="@string/annuler"
                     android:textAllCaps="true"
                     android:textSize="18sp"
                     android:textStyle="bold"
                     android:gravity="center"

                     android:id="@+id/annuler_btn"

                     />

             </LinearLayout>


         </RelativeLayout>



     </LinearLayout>
</LinearLayout>